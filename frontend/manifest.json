{
  "manifest_version": 3,
  "name": "AI Website Assistant",
  "version": "2.0.0",
  "description": "智能網站助理，基於 RAG 技術提供領域專業知識（當前配置：成大請假系統）",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
